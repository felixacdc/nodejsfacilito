extends ../../layout.jade
block contenido
	form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST", class="container")
		div(class="row")
			div(class="col-md-3")
			div(class="col-md-6")
				h1(class="text-center") Editar imagen
				hr
				div(class="form-group")
					label(for="title") Título
					input(type="text", name="title", placeholder="Título", id="title", class="form-control", value="#{imagen.title}")
				div(class="form-group")
					label(for="archivo") Imagen
					input(type="file", name="archivo", id="archivo", class="form-control")
				div(class="row little-bottom-space")
					div(class="col-xs-12 col-sm-6")
						input(type="submit", value="Editar", class="btn btn-info")
				