extends ../../layout.jade
block contenido
	div(class="container")
		h1(class="text-center") Mis imagenes:
		for imagen in imagenes
			div(class="row")
				div(class="col-md-9")
					h3=imagen.title
				div(class="col-md-3 text-right")
					a(href="/app/imagenes/#{imagen._id}/edit", class="btn btn-info btn-sm right-space btn-margin-top") Editar
					a(href="/app/imagenes/#{imagen._id}", class="btn btn-danger btn-sm btn-margin-top") Eliminar
			hr
